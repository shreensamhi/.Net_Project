@model Student

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .card {
            border: none;
            border-radius: 8px;
            overflow: hidden;
        }

            .card ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .card li {
                padding: 15px;
                border-bottom: 1px solid #ddd;
            }

                .card li:last-child {
                    border-bottom: none;
                }

                .card li:nth-child(odd) {
                    background-color: #f9f9f9;
                }

    </style>
</head>
<body>
    <div class="container">
        <h1>Student Details</h1>
        <div class="card">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">ID: @Model.StudentId</li>
                <li class="list-group-item">Name: @Model.Name</li>
                <li class="list-group-item">Age: @Model.age</li>
                <li class="list-group-item">Department ID: @Model.DepartmentId</li>
                <li class="list-group-item">Address: @Model.adress</li>
            </ul>
        </div>
    </div>
</body>
</html>
