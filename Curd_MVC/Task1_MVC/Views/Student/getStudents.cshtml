@model ViewModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #eaeef3;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #444;
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        a.btn {
            margin-bottom: 20px;
            background: linear-gradient(to right, #04AA6D, #45a049);
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            transition: background 0.3s, transform 0.3s;
        }

            a.btn:hover {
                background: linear-gradient(to right, #45a049, #04AA6D);
                transform: translateY(-3px);
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 20px;
            text-align: left;
        }

        th {
            background-color: #04AA6D;
            color: white;
            font-weight: bold;
        }

        tr {
            border-bottom: 1px solid #ddd;
        }

            tr:hover {
                background-color: #f5f5f5;
            }

        .action-btns a {
            margin-right: 10px;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s, transform 0.3s;
            display: inline-block;
        }

        .action-btns .show-info-btn {
            background-color: #28a745;
            color: white;
        }

            .action-btns .show-info-btn:hover {
                background-color: #218838;
                transform: translateY(-3px);
            }

        .action-btns .remove-btn {
            background-color: #dc3545;
            color: white;
        }

            .action-btns .remove-btn:hover {
                background-color: #c82333;
                transform: translateY(-3px);
            }

        .action-btns .update-btn {
            background-color: #ffc107;
            color: white;
        }

            .action-btns .update-btn:hover {
                background-color: #e0a800;
                transform: translateY(-3px);
            }

    </style>
</head>
<body>
    <div class="container">
        <h1>Students</h1>
       
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Department ID</th>
                    <th>Department Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    Department department = Model.Departments.FirstOrDefault(x => x.DepartmentId == item.DepartmentId);

                    <tr>
                        <td>@item.Name</td>
                        <td>@item.StudentId</td>
                        <td>@item.age</td>
                        <td>@item.adress</td>
                        <td>@item.DepartmentId</td>
                        <td>@department.DepartmentName</td>
                        <td class="action-btns">
                            <a href="/student/GetStudent/@item.StudentId" class="show-info-btn" role="button">Show Info</a>
                            <a href="/student/removeStudent/@item.StudentId" class="remove-btn" role="button">Remove</a>
                            <a href="/student/EditStudent/@item.StudentId" class="update-btn" role="button">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn" href="/student/AddStudent" role="button">Add Student</a>
        <a class="btn" href="/student/getStudents" role="button">Get Students</a>
    </div>
</body>
</html>
